<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msaggik.media.presentation.ui.MediaFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:padding="@dimen/dimen_4">

        <TextView
            android:id="@+id/panel_header"
            android:text="@string/media_library"
            android:layout_marginStart="@dimen/dimen_16"
            style="@style/TextViewSettingHeader"/>

    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_media"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        app:tabTextAppearance="@style/BaseTabLayoutText"
        style="@style/TabLayout"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>